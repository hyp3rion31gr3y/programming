
import random

def noun():
    with open("nouns.txt", encoding = "utf-8") as n, open("verbs.txt", encoding = "utf-8") as v:
        t = n.read()
        nouns = t.split(",")
        random_noun = random.choice(nouns)
        t_1 = v.read()
        verbs = t_1.split(",")
        random_verb = random.choice(verbs)
    if random_noun == "tu":
        return random_noun + random_verb + "s"
    else:
        return random_noun + random_verb

print(noun())
